<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
   <definition name="baseLayout"  template="/common/layout.jsp">
      <put-attribute name="title" value="" />
      <put-attribute name="header" value="/common/header.jsp" />
      <put-attribute name="side" value="/common/side.jsp" />
      <put-attribute name="body" value="" />
      <put-attribute name="footer" value="/common/footer.jsp" />
   </definition>

   <definition name="home.jsp" extends="baseLayout">
      <put-attribute name="side" value="" />
      <put-attribute name="body" value="home.jsp" />
   </definition>

   <definition name="group/*" extends="baseLayout">
      <put-attribute name="side" value="" />
      <put-attribute name="body" value="group/{1}" />
   </definition>

   <definition name="/*/mypageHome.jsp" extends="baseLayout">
      <put-attribute name="title" value="" />
      <put-attribute name="header" value="common/header.jsp" />
      <put-attribute name="side" value="" />
      <put-attribute name="footer" value="common/footer.jsp" />
      <put-attribute name="body" value="user/mypageHome.jsp" />
   </definition>

   <definition name="productDetail" extends="baseLayout">
      <put-attribute name="title" value="주문상세" />
      <put-attribute name="body" value="product/productDetail.jsp" />
   </definition>

</tiles-definitions>
