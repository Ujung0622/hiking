<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.groupMedia">
    <resultMap id="groupMediaResult" type="groupMediaVO">
        <result property="groupNum" column="groupNum" />
        <result property="mediaNum" column="mediaNum" />
        <result property="type" column="type" />
        <result property="content" column="content" jdbcType="BLOB" javaType="[B"/>
        <result property="createdAt" column="createdAt" />
        <result property="updatedAt" column="updatedAt" />
    </resultMap>
    <resultMap id="groupMediaContent" type="hashmap">
        <result property="content" column="content" jdbcType="BLOB" javaType="[B"/>
    </resultMap>

    <insert id="insertGroupMedia" parameterType="groupMediaVO">
        insert into groupsMedia
        values (#{groupNum}, #{mediaNum}, #{type}, #{content}, sysdate, sysdate)
    </insert>

    <!-- groupNum 일치 1개 content select -->
    <select id="selectGroupMedia" resultMap="groupMediaContent" parameterType="Integer">
        <![CDATA[
            SELECT content
            FROM groupsMedia
            WHERE mediaNum = 1
            AND groupNum = #{groupNum}
        ]]>
    </select>

