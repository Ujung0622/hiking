		   insert into orders(
		                ORDERNUM, 
		                USERNUM,
                    CARTNUM,
                    ORDEREDAT,
                    PRICE,
					CHARGE,
					ORDERSTATUS,
					DELIVERYSTATUS,
					ORDERTYPE,
					PRODNUM,
					PRODNAME,
					QUANTITY
				    )
					  			values(
					  			      #{orderNum},
					  			      #{userNum},
					  			      #{orderNum},
					  			      SYSDATE,
					  			      #{price},
					  			      3000,
					  			      1,
					  			      1,
					  			      1,
					  			      #{prodNum},
					  			      #{prodName},
					  			      #{quantity})
		]]>
